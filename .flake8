[flake8]
# Scrat-Backup flake8-Konfiguration

# Max Line Length (wie in pyproject.toml)
max-line-length = 100

# Exclude
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info

# Ignore
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503

per-file-ignores =
    # __init__.py can have unused imports
    __init__.py: F401
